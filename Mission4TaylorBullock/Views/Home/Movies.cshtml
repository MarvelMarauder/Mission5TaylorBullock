@{
    ViewData["Title"] = "Movie Knowledge";
}
@model Mission4TaylorBullock.Models.MovieResponse 
<h1>@ViewData["Title"]</h1>

<h2>We wouldn't mind you helping us increase our database of excellent movies! Just make sure to let us know if you've lent it to anyone; we'd like to know if you
    have it on you or not!</h2>
<form method="post">
    <label asp-for="CategoryID">Category:</label>
    <select asp-for="CategoryID">
        @foreach (Category c in ViewBag.Category)
        {
            <option value="@c.CategoryID">@c.CategoryName</option>
        }
    </select><br />

    <label asp-for="Title">Title:</label>
    <input type="text" asp-for="Title" /><br />

    <label asp-for="Year">Year:</label>
    <input type="number" asp-for="Year" /><br />

    <label asp-for="Director">Director:</label>
    <input type="text" asp-for="Director" /><br />

    <label asp-for="Rating">Rating:</label>
    <select asp-for="Rating">
        <option value="G">G</option>
        <option value="PG">PG</option>
        <option value="PG-13">PG-13</option>
        <option value="R">R</option>
    </select><br />
    <label asp-for="Edited">Edited:</label>
    <select asp-for="Edited">
        <option value="true">Yes</option>
        <option value="false">No</option>
    </select><br />

    <label asp-for="LentTo">Lent to:</label>
    <input type="text" asp-for="LentTo" /><br />

    <label asp-for="Notes">Notes:</label>
    <input type="text" asp-for="Notes" /><br />

    <div asp-validation-summary="All"></div><br />
    <input type="submit" value="Save Movie" />

</form>
